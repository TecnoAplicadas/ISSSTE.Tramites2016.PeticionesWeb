
@{
    ViewBag.Title = "IndexPost";
    Layout = "~/Views/Shared/_LayoutPeticiones.cshtml";
}

<h2>IndexPost</h2>


@using (Html.BeginForm("Index", "ModalAjax", FormMethod.Post, new { enctype = "multipart/form-data" }))
{


    <input type="submit" id="btnGet" value="Get IP Address" />

    <br />
    <br />
    <span id="lblIPAddress"></span>
    <div class="modal" style="display: none">
        <div class="center">
            <img alt="" src="loader.gif" />
        </div>
    </div>


}


<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
$(function () {
    $("#btnGet").click(function () {
        $.ajaxSetup({
            global: false,
            type: "GET",
            url: "http://www.telize.com/jsonip",
            beforeSend: function () {
               $(".modal").show();
            },
            complete: function () {
                $(".modal").hide();
            }
        });
        $.ajax({
            data: "{}",
            success: function (r) {
                $("#lblIPAddress").html("IP Address: " + r.ip);
            }
        });
    });
});

$(function () {
    $("#enviarSol").click(function () {
        $.ajaxSetup({
            global: false,
            type: "GET",
            url: "http://www.telize.com/jsonip",
